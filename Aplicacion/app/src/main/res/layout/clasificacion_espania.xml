<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Tabla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">

    <TableRow
        android:id="@+id/Cabecera"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ColumnaEquipo"
            android:layout_width="wrap_content"
            android:fontFamily="monospace"
            android:padding="5px"
            android:text="Equipo"
            android:textColor="#000a55"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/ColumnaPNTS"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="monospace"
            android:padding="5px"
            android:text="Puntos"
            android:textColor="#000a55"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/ColumnaPJ"
            android:layout_width="wrap_content"
            android:fontFamily="monospace"
            android:padding="5px"
            android:text="PJ"
            android:textColor="#000a55"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/ColumnaPG"
            android:layout_width="wrap_content"
            android:fontFamily="monospace"
            android:padding="5px"
            android:text="PG"
            android:textColor="#000a55"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/ColumnaPE"
            android:layout_width="wrap_content"
            android:fontFamily="monospace"
            android:padding="5px"
            android:text="PE"
            android:textColor="#000a55"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/ColumnaPP"
            android:layout_width="wrap_content"
            android:fontFamily="monospace"
            android:padding="5px"
            android:text="PP"
            android:textColor="#000a55"
            android:textSize="22sp" />
    </TableRow>

    <TableRow
        android:id="@+id/SeparadorCabecera"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/LineaCabecera"
            android:layout_width="fill_parent"
            android:layout_span="6"
            android:background="@color/colorPrimaryDark"></FrameLayout>
    </TableRow>

    <TableRow
        android:id="@+id/Fila1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/equipo1"
            android:layout_width="wrap_content"
            android:text=""
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

        <TextView
            android:id="@+id/pnts1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

        <TextView
            android:id="@+id/pj1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

        <TextView
            android:id="@+id/pg1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

        <TextView
            android:id="@+id/pe1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

        <TextView
            android:id="@+id/pp1"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Menu" />
    </TableRow>

</TableLayout>